    <!-- Login Form -->
    <div class="body d-flex justify-content-center align-items-center" style="padding-top: 120px;">
        <form asp-action="Login" asp-controller="User" method="post" class="p-4 bg-white rounded shadow" style="width: 400px; max-width: 90%;">
            <h2 class="text-center mb-4">Login</h2>

            <input type="text" name="Email" class="form-control mb-3" placeholder="Email" required />
            <input type="password" name="Password" class="form-control mb-3" placeholder="Password" required />

            @if (ViewBag.LoginError != null)
            {
                <div class="alert alert-danger">@ViewBag.LoginError</div>
            }

            <div class="mb-3">
                <small>If you don't have an account click here to </small>
                <a href="/User/Register">Create Account</a>
            </div>

            <button type="submit" class="btn btn-primary w-100">Login</button>
        </form>
    </div>

