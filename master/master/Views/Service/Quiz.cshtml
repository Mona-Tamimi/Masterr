    <!-- Hero Section -->
    <section class="hero">
        <h1>"Ready to Discover Your Path?"</h1>
        <div class="category-badge">Category: @ViewBag.SelectedCategory</div>
    </section>

    <section class="service1 row" data-aos="fade-up">
        <div class="s11 col-6">
            <h3>Take our quick assessment quiz to find the academic or career path that fits you best.</h3>
        </div>
        <div class="s12 col-6">
            <img class="img" src="~/img/quiz.jpg">
        </div>
    </section>

    <!-- Steps Section -->
    <section class="steps-section">
        <div class="step">
            <div class="circle">01</div>
            <p>Easy and simple</p>
        </div>
        <div class="step">
            <div class="circle">02</div>
            <p>Based on scientific foundations and theories</p>
        </div>
        <div class="step">
            <div class="circle">03</div>
            <p>Integrated</p>
        </div>
    </section>

    <!-- Instructions Section -->
    <section class="instructions-section">
        <p><strong>Instructions:</strong></p>
        <p>Answer honestly for the best results.</p>
        <p>You can retake the quiz at any time.</p>
        <button onclick="location.href='@Url.Action("duringQuiz", "Service", new { category = ViewBag.SelectedCategory })'" class="start-btn">Start the Quiz</button>
    </section>
 
    <script>
        AOS.init();
    </script>
