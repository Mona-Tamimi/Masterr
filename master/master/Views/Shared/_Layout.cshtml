<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - master</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/master.styles.css" asp-append-version="true" />
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
        }

        nav {
            background-color: #6273C3;
            z-index: +100;
            width: 100vw;
        }

        .nav-link {
            color: #EEEEEE;
            font-size: 1vw;
            margin-left: 1.9vw;
            margin-right: 1.9vw;
        }

        .logo {
            width: 7vw;
            height: 3vw;
        }

        .footer {
            background-color: #6273C3;
            color: white;
        }

            .footer a {
                color: white;
                text-decoration: none;
                margin: 0 1vw;
            }

                .footer a:hover {
                    text-decoration: underline;
                }

            .footer .brand {
                display: flex;
                align-items: center;
                justify-content: center;
                gap: 10px;
            }

                .footer .brand img {
                    width: 30px;
                }

            .footer .links {
                margin: 10px 0;
            }

            .footer .social a {
                font-size: 1vw;
                margin: 0 0.3vw;
                padding-left: 1.2vw;
                /* margin-left: 2vw; */
            }

        .footimg {
            width: 30vw !important;
            height: 10vw;
        }
    </style>
</head>

<body>
    <!-- Header -->
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <img src="/img/logo111.png" alt="logo" class="logo">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="#">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Services</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#Hobbies">FAQ</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-3">
                    <div class="brand">
                        <img src="/img/logo111.png" alt="Compass Icon" class="rounded-circle footimg">
                    </div>
                </div>
                <div class="col-9">
                    <div class="links row">
                        <a href="#" class="col-2">Home</a>
                        <a href="#" class="col-2">Services</a>
                        <a href="#" class="col-2">Contact</a>
                        <a href="#" class="col-2">FAQ</a>
                        <a href="#" class="col-2">About</a>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-6">
                            <p class="mt-2">
                                Startup Framework contains components and complex blocks which can easily be
                                integrated into almost any design.
                            </p>
                        </div>
                        <div class="col-3">
                            <a href="#">Privacy Policy</a>
                            <span>|</span>
                            <a href="#">Terms</a>
                        </div>
                        <div class="social col-3">
                            <a href="#"><i class="bi bi-facebook"></i></a>
                            <a href="#"><i class="bi bi-instagram"></i></a>
                            <a href="#"><i class="bi bi-telephone"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
</body>

</html>

